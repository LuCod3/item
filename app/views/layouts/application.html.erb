<!DOCTYPE html>
<html>
    <head>
        <title>Item</title>
        <%= csrf_meta_tags %>
        <%= csp_meta_tag %>
        <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
        <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    </head>

    <body>
        <div class="topnav" id="myTopnav">
            <%= link_to 'Home', item_path %>
            <a href="#mailing">Mailing</a>
            <a href="#signatures">Signatures</a>
            <a href="#sms">SMS</a>
            <a href="#CBox">CBox</a>
            <%= link_to 'Users', item_ad_users_path %>
            <a href="#settings">Settings</a>
            <a href="javascript:void(0);" class="icon" onclick="myFunction()">
                <i class="fa fa-bars"></i>
            </a>
        </div>

        <div id="mySidenav" class="sidenav">
            
            <div class="left">
                <div class="search">
                    <input type="text" class="text" placeholder="Search...">
                    <input type="button" class="searchBtn fa" value="&#xf002;">   
                </div>
                <div>
                    <input type="button" onclick="requestUserData()" value="Request data"> <!-- this is a placeholder button -->
                    <table id="myTable" class="table">
                        <!-- here we'll put the values from json -->
                    </table>
                </div>

            </div>
            <div class="right" onclick="navHandler()">                 <!-- Button is added to the sidenav itself to make it look nicer -->
               <div id="icon" class="fa sidebtn">&#xf067;</div>     <!-- We are using the same button to open and close the sidenav -->
            </div>
        </div>
        
        <!-- Use any element to open the sidenav -->
       
        <div id="main">
            <%= yield %>
        </div>
        
        <%= javascript_include_tag 'application' %>
    </body>
    <script>
        var token = $('meta[name="csrf-token"]').attr('content');
        // Attach CSRF token to every AJAX request
        $(document).ajaxSend(function (e, xhr, options) {
            xhr.setRequestHeader("X-CSRF-Token", token);
        });
    </script>
    
</html>