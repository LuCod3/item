<!DOCTYPE html>
<html>
    <head>
        <title>Item</title>
        <%= csrf_meta_tags %>
        <%= csp_meta_tag %>
        
        <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body>
        <div class="topnav" id="myTopnav">
            <a href="#home" class="active">Home</a>
            <a href="#mailing">Mailing</a>
            <a href="#signatures">Signatures</a>
            <a href="#sms">SMS</a>
            <a href="#CBox">CBox</a>
            <a href="#settings">Settings</a>
            <a href="javascript:void(0);" class="icon" onclick="myFunction()">
                <i class="fa fa-bars"></i>
            </a>
        </div>
        <div id="mySidenav" class="sidenav">
            
          <div class="left">
              <div class="search">
                  <input type="text" class="text" placeholder="Search...">
                  <input type="button" class="searchBtn fa" value="&#xf002;">   
              </div>
              <div>
                  <input type="button" onclick="requestUserData()" value="Request data"> <!-- this is a placeholder button -->
                  <table id="myTable" class="table">
                      <!-- here we'll put the values from json -->
                  </table>
              </div>

          </div>
          <div class="right" onclick="navHandler()">                 <!-- Button is added to the sidenav itself to make it look nicer -->
             <div id="icon" class="fa sidebtn">&#xf067;</div>     <!-- We are using the same button to open and close the sidenav -->
          </div>
        </div>
      
        
        <div id="main">
            <%= yield %>
        </div>
        <%= javascript_include_tag 'application' %>
    </body>   
</html>
