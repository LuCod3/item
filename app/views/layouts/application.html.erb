<!DOCTYPE html>
<html>
    <head>
        <title>Item</title>
        <%= csrf_meta_tags %>
        <%= csp_meta_tag %>
        <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
        <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    </head>

    <body>
        <div class="topnav" id="myTopnav">
            <%= link_to 'Home', item_path %>
            <a href="#mailing">Mailing</a>
            <a href="#signatures">Signatures</a>
            <a href="#sms">SMS</a>
            <a href="#CBox">CBox</a>
            <%= link_to 'Users', item_ad_users_path %>
            <a href="#settings">Settings</a>
            <a href="javascript:void(0);" class="icon" onclick="myFunction()">
                <a href="#sign_in" class="sign_in">Sign in</a>
                <i class="fa fa-bars"></i>
            </a>
        </div>
        <div id="mySidenav" class="sidenav">
            <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
            <form autocomplete="off" action="#">
                <div class="autocomplete" style="width:auto;">
                    <input id="myInput" type="text" name="search" placeholder="Type here">
                </div>
                <input type="submit">
            </form>
            <div>
                <input type="button" value="Generate a table." onclick="generate_table()">
                <table id="myTable">
                    
                </table>
            </div>
        </div>
        
        <!-- Use any element to open the sidenav -->
        <div id="mySidenavbtn">
            <a id="open" class=".mySidenavbtn" onclick="openNav()">Users&nbsp;&#x21E8;</a>
        </div>
        <div id="main">
            <%= yield %>
        </div>
        <div class="footer">
            <h2>Footer</h2>
        </div>
        <%= javascript_include_tag 'application' %>
    </body>   
</html>